{
	"compilerOptions": {
		"outDir": "./build/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "ESNext",
		"sourceMap": true,
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,

		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"baseUrl": "."
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
